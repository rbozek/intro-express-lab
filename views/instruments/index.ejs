<body>
  <h1>Instruments!</h1>
  <ul>
    <% instruments.forEach(instrument => { %>
      <li>
    <%= instrument.text %> 
    - 
    <%= instrument.loud ? 'loud' : 'not so loud' %>
    - 
    <%= instrument.easytocarry ? 'easy to carry' : 'heavy as hell' %>
      </li>
    <% }) %>
  </ul>
  <!-- testing adding a k:v property from server.js -->
  <h2><%= name %></h2>
  <!-- testing adding a ternary based on another property from server.js -->
  <h2><%= otherthing ? 'this comes back true!' : 'this comes back not true!' %></h2>
</body> 
</html>